[user]
	name = Mads Fors
	email = mads@madsfors.dk

[github]
	user = madsfors

[core]
	editor = cursor --wait
	autocrlf = input
	safecrlf = true
	excludesfile = ~/.gitignore_global

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = true

[credential]
	helper = osxkeychain

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	# Basic shortcuts
	st = status
	ci = commit
	co = checkout
	br = branch
	
	# More complex aliases
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	
	# Log aliases
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	
	# Diff aliases
	d = diff
	dc = diff --cached
	
	# Branch management
	delete-merged-branches = "!f() { git checkout ${1-main} && git branch --merged | grep -v ' ${1-main}$' | xargs -r git branch -d; }; f"
	
	# Stash aliases
	sl = stash list
	sa = stash apply
	ss = stash save

[init]
	defaultBranch = main

[merge]
	tool = vscode

[mergetool "vscode"]
	cmd = code --wait $MERGED

[diff]
	tool = vscode

[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[rerere]
	enabled = true

[rebase]
	autoStash = true